public class Blackjack {

    public static Random initRandom(String[] args) {
        // do not modify this code
        if (args.length >= 1) {
            return new Random(Long.parseLong(args[0]));
        } else {
            return new Random();
        }
    }

    public static void main(String[] args) {
        // The random number generator is given to you, do not change this line.
        // Every random number should be generated through this variable.
        Random random = initRandom(args);

        System.out.println("Welcome to Blackjack!");

        int ufirstcard = (int) random.nextInt(2, 12);
        int usecondcard = (int) random.nextInt(2, 12);
        int utotal = ufirstcard + usecondcard; 
        String cardlist = "Your cards are: "+ufirstcard+", "+ usecondcard;
        System.out.println(cardlist);
        String ubust = "no";

        int dfirstcard = (int) random.nextInt(2, 12);
        int dsecondcard = (int) random.nextInt(2, 12);
        int dtotal = dfirstcard + dsecondcard;
        String dcardlist = "The dealer's cards are: "+dfirstcard+", "+ dsecondcard;
        String dbust = "no";

        // Example for producing a random integer
        // between 0 (including) and 50 (excluding):
        // random.nextInt(50)

        // complete this function
        // ...
        Scanner scnr = new Scanner(System.in);
        while (true) {
            System.out.println("Would you like to hit or stand?");
            String answer = scnr.nextLine();

            if (answer.equals("hit")) {
                int unewcard = (int) random.nextInt(2, 12);
                utotal = utotal + unewcard;
                cardlist = cardlist+", "+unewcard;
                if (utotal > 21) {
                    System.out.println("You have bust!");
                    ubust = "yes";
                    break; 
                }
                else {
                    System.out.println(cardlist);
                }
            }
            else {
                break;
            }
        }
        scnr.close();

        // dealer
        while (ubust.equals("no")) {
            int dchoice = (int) random.nextInt(1, 3);
            if (dchoice == 1) {
                System.out.println("The dealer hits.");
                int dnewcard = (int) random.nextInt(2, 12);
                dtotal = dtotal + dnewcard;
                dcardlist = dcardlist+", "+dnewcard;
                if (dtotal > 21) {
                    System.out.println("The dealer has bust!");
                    dbust = "yes";
                    break;
                }
            }
            else {
                System.out.println("The dealer stands.");
                break;
            }
        }
        // rest of code
        System.out.println(cardlist);
        System.out.println(dcardlist);

        //decide+announce winner
        if (dbust.equals("yes")) {
            System.out.println("You win!");
        }
        else if (ubust.equals("yes")) {
            System.out.println("Dealer wins!");
        }
        else if (utotal > dtotal) {
            System.out.println("You win!");
        }
        else if (dtotal > utotal) {
            System.out.println("Dealer wins!");
        }
        else {
            System.out.println("Tie!");
        }
        }

    }
